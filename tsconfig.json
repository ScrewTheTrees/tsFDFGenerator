{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "sourceMap": false,
    "target": "esnext",

    "outDir": "./target",
    "baseUrl": "./index.ts",
    "lib": [
      "esnext"
    ],

    "moduleResolution": "classic",
    "paths": {
      "*": [
        "../node_modules/*/src/index",
        "../node_modules/*/lib/index",
        "../node_modules/*/index",
        "../node_modules/*/dist/index",
        "../node_modules/*"
      ]
    }
  }
}